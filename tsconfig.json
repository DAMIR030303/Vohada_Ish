{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "types": ["jest", "@testing-library/jest-native", "node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/test-utils/**",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "e2e/**"
  ]
}
